<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*">

    <TableRow
        android:id="@+id/tbrow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvids"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_column="1"/>

        <TextView
            android:id="@+id/tvNoFakturs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Faktur"
            android:layout_gravity="center"
            android:layout_column="1"
            android:paddingStart="6dp"/>

        <TextView
            android:id="@+id/tvNoBarcodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Barcode"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_column="1"
            android:paddingStart="6dp"/>

        <TextView
            android:id="@+id/tvKodeBarangs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Kode Barang"
            android:layout_column="1"
            android:paddingStart="6dp"/>

        <TextView
            android:id="@+id/tvNamaItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Item"
            android:layout_gravity="center"
            android:layout_column="1"
            android:paddingStart="6dp"/>

        <TextView
            android:id="@+id/tvJenisItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jenis Item"
            android:layout_gravity="center"
            android:layout_column="1"
            android:paddingStart="6dp"/>

        <TextView
            android:id="@+id/tvJumlahs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah"
            android:layout_gravity="center"
            android:layout_column="1"
            android:paddingStart="6dp"/>


        <TextView
            android:id="@+id/tvKeterangans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keterangan"
            android:layout_gravity="center"
            android:layout_column="1"/>

    </TableRow>

</TableLayout>
