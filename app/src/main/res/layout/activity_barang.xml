<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitymain.BarangActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tglAwal"
                android:layout_width="118dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:background="@color/white"
                android:text="-- / -- / ----"
                />

            <TextView
                android:id="@+id/tvTo"
                android:layout_width="46dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="#555555"
                android:text="TO"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

            <EditText
                android:id="@+id/tglAkhir"
                android:layout_width="118dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:background="@color/white"
                android:text="-- / -- / ----"
                />

            <Button
                android:id="@+id/btnCari"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#555555"
                android:text="Cek"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvJumlahData"
                android:layout_width="128dp"
                android:layout_height="36dp"
                android:text="Jumlah Data :"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv0"
                android:layout_width="55dp"
                android:layout_height="36dp"
                android:text="0"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tvGrandTotal"
                android:layout_width="108dp"
                android:layout_height="36dp"
                android:text="Grand Total :"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:text="00"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Nofaktur"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Kode Barang"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Nama Item"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Jenis Item"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Jumlah"
                    />

                <TextView
                    android:id="@+id/tvWan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Warna"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Tanggal"
                    />

            </TableRow>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_barang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_Tamba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="32dp"
        android:clickable="true"
        android:src="@drawable/ic_add"
        />
</RelativeLayout>